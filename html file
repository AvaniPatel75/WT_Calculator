	<script type="text/javascript">
		
		function dis(value){
			// body...
			document.getElementById("result").value+=value;
		}
		
		function calculate(){

			 x=document.getElementById("result").value;
			 y=eval(x);
			document.getElementById("result").value=y;
			
		}
		function clr() { 
            document.getElementById("result").value = "" 
        } 
	</script>

